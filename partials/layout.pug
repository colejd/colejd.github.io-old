            meta(name='author', content='Jonathan Cole')
            
            block headinfo

            // Load JQuery first
            script(src='/dist/jquery/jquery-3.1.0.js')

            // Load web fonts
            script(src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js")
            script.
                WebFont.load({
                google: {
                    families: ['Work Sans:400,500', 'Ubuntu:700', 'Rye']
                }
                });

            // Custom styles for this template
            link(href="/css/style.css", rel="stylesheet")


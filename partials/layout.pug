        // Custom scripts hook
        block scripts

    body
        block body
            // Include sidebar
            include sidebar.pug

            block before-content

            main.container.main-content(role='main')
                article
                    block content

            block after-content

            // Bootstrap core
            script(defer='', src='/dist/bootstrap/js/bootstrap.min.js')
            script(defer='', src='/dist/bootstrap/js/bootstrap-accessibility.min.js')

            // Page JavaScript
            script.
                //Scroll to clicked anchor links
                var $root = $('html, body');
                $('a').click(function(){
                    var href = $.attr(this, 'href');
                    if(href == null) return;
                    if(href[0] != "#") return;
                    $root.animate({
                        scrollTop: $(href).offset().top
                    }, 500, function (){
                        window.location.hash = href;
                    });
                    return false;
                });
                //Scroll to url anchor
                $(document).ready(function(){
                    if($(location.hash).length && location.hash != "#"){ //If the tag actually exists on the page
                        $('html, body, section').animate({
                            'scrollTop': $(location.hash).offset().top
                        }, 500);
                    }
                });


